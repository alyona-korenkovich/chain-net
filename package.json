{
  "name": "chain-net",
  "version": "1.0.0",
  "description": "Small blockhain pet-project created as part of the courses \"Development of network applications\" and \"Software testing\"",
  "author": "Alyona Korenkovich",
  "private": true,
  "license": "MIT",
  "homepage": "https://github.com/alyona-korenkovich/chain-net",
  "keywords": [
    "blockchain",
    "education"
  ],
  "main": "src/main.ts",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alyona-korenkovich/chain-net"
  },
  "scripts": {
    "start": "npx ts-node -T src/main.ts",
    "eslint": "eslint src/** tests/**",
    "eslint:fix": "eslint src/** tests/** --fix",
    "test": "jest",
    "coverage": "jest --collect-coverage"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "tests",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "crypto-random-string": "^5.0.0",
    "ts-node": "^10.9.1"
  }
}
